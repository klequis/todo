{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src", // must be set to /src for abs imports
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react", // was "react"
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // changed for react-jss
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    // "noImplicitAny": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "noUnusedLocals": true
    "outDir": "build/dist",
    "resolveJsonModule": true,
    "rootDir": "src/*",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    // "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
  },
  "paths": {

  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
